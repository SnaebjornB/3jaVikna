@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using BookCave.Models.EntityModels

@inject SignInManager<ApplicationUser> SignInManager

@if(SignInManager.IsSignedIn(User))
{
    <ul>
        <li>
            @{
                if(this.User.IsInRole("Employee")) {
                    <form asp-action="AddBook" asp-controller="Employee" method="GET">
                        <button type="submit" class="btn-link navbar-btn navbar-link">Add a new book</button>            
                    </form>
                    <form asp-action="EditDiscount" asp-controller="Employee">
                        <button type="submit" class="btn-link navbar-btn">Edit discounts</button>            
                    </form>          
                } 
                else 
                {
                    
                    <form asp-action="Basket" asp-controller="Order" method="get">
                    
                            <a asp-action="Basket" asp-controller="Order">
                            <img src="~/images/cart_icon.png" alt="cart icon" style="width:42px; height:45px;" id=cartIcon></a>
                            <span id="basketCounter"></span>
                    </form>
                    
                }
            }
        </li>
    </ul>
}
