<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <title>@ViewData["Title"] - BookCave</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/siteStyles.css" />
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="http://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">

</head>
<body onload="getBasketCount()">
    
    <div id="siteContainer">
        <div id="siteHeader">
            <div id="siteHeaderTop">
                <div class="headerLogoImg">
                    <a asp-controller="Home" asp-action="Index"><img src="~/images/bcLogo.png" alt="Book Cave logo" class="nav navbar-nav navbar-left"></a>
                </div>
                <div class="searchAlign">
                    <form asp-controller="Book" asp-action="SearchBar" method="POST">
                        <input type="text" name="searchWord" placeholder="Search.." class="from-control searchInput"/>
                        <input type="submit" value="Search" class="btn btn-secondary searchButton"/>
                        <a asp-controller="Book" asp-action="Search" class="btn btn-default searchButtonAdv">Advanced Search</a>
                    </form>
                </div>
                <div class="loginAlign">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
            <div style="clear:both">
                <div id="siteHeaderBottom">
                    <ul>
                        <li><a asp-controller="Book" asp-action="Top10"><h4>Top 10</h4></a></li>
                        <li><a asp-controller="Book" asp-action="DiscountedBooks"><h4>Special Offers</h4></a></li>
                        <li><a asp-controller="Book" asp-action="ShopByCategory"><h4>Shop By Category</h4></a></li>
                        
                    </ul>
                </div>
                <div id="userCartOrSettings">
                        @await Html.PartialAsync("_CartPartial")
                </div>
            </div>
        </div>
            
        <div id="siteBody">
            <div id="siteContent">
                @RenderBody()
            </div>
            
        </div>
        <div id="siteFooter">
            <div id="siteFooterEmpty"></div>
            <div id="siteFooterNav">
                <div class="siteFooterNavLinks">
                    <div class="siteFooterNavHeading"><h3>Support</h3></div>
                    <br><br><br>
                    <ul>
                        <li><a asp-controller="Home" asp-action="About">About us</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact us</a></li>
                        <li><a asp-controller="Account" asp-action="Login">Login/Sign up</a></li>
                    </ul> 
                </div>
                <div class="siteFooterNavLinks">
                    <div class="siteFooterNavHeading"><h3>Jobs</h3></div>
                    <br><br><br>
                    <ul>
                        <li><a href="#">Apply</a></li>
                    </ul>
                </div>
                <div class="siteFooterNavLinks">
                    <div class="siteFooterNavHeading"><h3>Other</h3></div>
                    <br><br><br>
                    <ul>
                        <li><a asp-controller="Home" asp-action="TermsAndConditions">Terms & Conditions</a></li>
                        <li><a asp-controller="Home" asp-action="WeDeliver">Where do we deliver?</a></li>
                    </ul>
                </div>
                <div class="siteFooterNavLinks">
                    <div class="siteFooterNavHeading"><h3 style="visibility:hidden">Empty space</h3></div>
                </div>
            </div>
            <div style="text-align:center; margin:200px auto 50px">
                <p>&copy;theBookCave.com</p>
            </div>
        </div>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script> 
    <script type="text/javascript" src="~/js/multislider.js"></script>
    <script>
        $('#mixedSlider1').multislider({
            duration: 450,
            interval: 0
        });
        $('#mixedSlider2').multislider({
            duration: 450,
            interval: 0
        });
        $('#mixedSlider3').multislider({
            duration: 450,
            interval: 0
        });
    </script>
</body>
<script type="text/javascript">
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-36251023-1']);
  _gaq.push(['_setDomainName', 'jqueryscript.net']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
</script>
</html>
