@model BookCave.Models.ViewModels.EditUserViewModel

<div class="siteBody">
<h1>Edit Profile</h1>
<form asp-action="EditProfile" asp-controller="Account" class="form-horizontal">
    <div class="form-group">
        <label>
            First Name <br><input type="text" autofocus="autofocus" asp-for="firstName" class="form-control"/>
        </label>
        <span asp-validation-for="firstName" class="text-danger"></span>
        <br>
    </div>
    <div class="form-group">  
        <label>          
            Last Name <br><input type="text" asp-for="lastName" class="form-control"/>
        </label>            
        <span asp-validation-for="lastName" class="text-danger"></span>
        <br>
    </div>
    <div class="form-group">  
        <label>          
            Image url <br><input type="text" asp-for="image" class="form-control"/>
        </label>            
        <br>
    </div>
    <div class="form-group">  
        <label>          
            Favorite Book <br><input type="text" asp-for="favBook" class="form-control"/>
        </label>            
        <br>
    </div>
    <div>    
        <input type="submit" class="btn btn-default" value="Submit"/>
    </div>
</form>
</div>